<div class="container" ng-controller="app.views.administracion.categorias as vm">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>@L("")Categorías</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a class="clickable" ng-click="vm.abrirModalNueva()" title="">@L("")Registrar Nueva Categoría <span class="fa fa-plus"></span></a>
        </div>
        <div class="col-md-6 text-right">
            <p>{{vm.categorias.length}} @L("")Categorías</p>
        </div>
    </div>
    <div class="row">
        <div class="col-row-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table id="table-ext-3" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">@L("")Nombre</th>
                                <th class="text-center">@L("")Tipo de Categoría</th>
                                <th class="text-center">@L("")Estado</th>
                                <th class="text-center">@L("")Cambiar Estado</th>
                                <th class="text-center">@L("")Editar</th>
                                <th class="text-center">@L("")Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="categoria in vm.categorias">
                                <td>
                                    {{categoria.nombre}}
                                </td>
                                <td class="text-center">
                                    <i ng-show="categoria.tipoCategoria == 'reporte'" class="fa fa-cogs"></i><i ng-hide="categoria.tipoCategoria == 'reporte'" class="fa fa-cubes"></i> {{categoria.tipoCategoria}}
                                </td>
                                <td>
                                    <span ng-show="categoria.esActiva">
                                        Activa
                                    </span>
                                    <span ng-show="!categoria.esActiva">
                                        Inactiva
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.modificarEstadoCategoria(categoria)" title="@L("")Cambiar el estado de la categoría"><span class="fa fa-refresh fa-2x text-orange"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEditar(categoria.id)" title="@L("")Editar categoría"><span class="fa fa-pencil fa-2x text-orange"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEliminar(categoria.id)" title="@L("")Eliminar la categoría"><span class="fa fa-trash fa-2x text-orange"></span></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
