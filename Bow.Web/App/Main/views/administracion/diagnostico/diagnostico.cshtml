<div class="container" ng-controller="app.views.administracion.diagnostico as vm">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>@L("")Diagnostico</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a class="clickable" ng-click="vm.abrirModalNueva()" title="">@L("")Registrar Nuevo Diagnostico <span class="fa fa-plus"></span></a>
        </div>
        <div class="col-md-6 text-right">
            <p>{{vm.diagnostico.length}} @L("")Diagnosticos</p>
        </div>
    </div>
    <div class="row">
        <div class="col-row-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table id="table-ext-3" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">@L("")Nombre</th>
                                <th class="text-center">@L("")Observaciones</th>
                                <th class="text-center">@L("")Obligatorio para viajar</th>
                                <th class="text-center">@L("")Estado</th>
                                <th class="text-center">@L("")Cambiar Estado</th>
                                <th class="text-center">@L("")Editar</th>
                                <th class="text-center">@L("")Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="diagnostico in vm.diagnostico">
                                <td>
                                    {{diagnostico.nombre}}
                                </td>
                                <td>
                                    {{diagnostico.observaciones}}
                                </td>
                                <td class="text-center">
                                    <i ng-show="diagnostico.esRequerido" class="fa fa-check fa-2x text-success"></i>
                                </td>
                                <td>
                                    <span ng-show="diagnostico.esActivo">
                                        Activa
                                    </span>
                                    <span ng-show="!diagnostico.esActivo">
                                        Inactiva
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.modificarEstadoDiagnostico(diagnostico)" title="@L("")Cambiar el estado del diagnostico"><span class="fa fa-refresh fa-2x text-orange"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEditar(diagnostico.id)" title="@L("")Editar diagnostico"><span class="fa fa-pencil fa-2x text-orange"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEliminar(diagnostico.id)" title="@L("")Eliminar diagnostico"><span class="fa fa-trash fa-2x text-orange"></span></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
