<div class="container" ng-controller="app.views.administracion.entidadesDimensiones as vm">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>@L("")Entidades de las Dimensiones</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <a class="clickable" ng-click="vm.abrirModalNueva()" title="">@L("")Registrar Nueva Entidad <span class="fa fa-plus font-size-16"></span></a>
        </div>
        <div class="col-md-6 text-center">
            <label class="control-label" for="selectedDimension">@L("")Dimesión</label>
            <select ng-model="vm.selectedDimension" ng-options="to.id as to.nombre for to in vm.listaDimensiones" class="form-control" name="selectedDimension" id="selectedDimension" required ng-change="vm.cargarEntidades()">
                <option value="">@L("")Seleccione...</option>
            </select>
        </div>
        <div class="col-md-3 text-right">
            <p>{{vm.listaEntidades.length}} @L("")Dimensiones</p>
        </div>
    </div>
    <br />
    <div class="row" ng-show="vm.selectedDimension">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table id="table-ext-3" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">@L("")Nombre</th>
                                <th class="text-center">@L("")Descripción</th>
                                <th class="text-center">@L("")Editar</th>
                                <th class="text-center">@L("")Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="entidad in vm.listaEntidades">
                                <td>
                                    {{entidad.nombre}}
                                </td>
                                <td>
                                    {{entidad.descripcion}}
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEditar(entidad.id, entidad.nombre)" title="@L("")Editar la entidad"><span class="fa fa-pencil fa-2x"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEliminar(entidad.id)" title="@L("")Eliminar la entidad"><span class="fa fa-trash fa-2x"></span></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
