<div class="container" ng-controller="app.views.administracion.calificacionConductores as vm">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>@L("")Reportes de Conductores</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
        </div>
        <div class="col-md-6 text-right">
            <p>{{vm.listaReporteConductores.length}} @L("")Reportes</p>
        </div>
    </div>
    <div class="row">
        <div class="col-row-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table id="table-ext-3" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">@L("")Tipo de Vehiculo</th>
                                <th class="text-center">@L("")Placa</th>
                                <th class="text-center">@L("")Empresa</th>
                                <th class="text-center">@L("")Observaciones</th>
                                <th class="text-center">@L("")Calificación</th>
                                <th class="text-center">@L("")Consultar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="reporte in vm.listaReporteConductores">
                                <td>
                                    {{reporte.tipoVehiculoReporte}}
                                </td>
                                <td>
                                    {{reporte.placa}}
                                </td>
                                <td>
                                    {{reporte.empresa}}
                                </td>
                                <td>
                                    {{reporte.observaciones}}
                                </td>
                                <td class="text-center">
                                    <i class="fa" ng-class="{ 'fa-star' : reporte.calificacion > 0, 'fa-star-o' : reporte.calificacion < 1 }"></i>
                                    <i class="fa" ng-class="{ 'fa-star' : reporte.calificacion > 1, 'fa-star-o' : reporte.calificacion < 2 }"></i>
                                    <i class="fa" ng-class="{ 'fa-star' : reporte.calificacion > 2, 'fa-star-o' : reporte.calificacion < 3 }"></i>
                                    <i class="fa" ng-class="{ 'fa-star' : reporte.calificacion > 3, 'fa-star-o' : reporte.calificacion < 4 }"></i>
                                    <i class="fa" ng-class="{ 'fa-star' : reporte.calificacion > 4, 'fa-star-o' : reporte.calificacion < 5 }"></i>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalConsultar(reporte.id)" title="@L("")Consultar el reporte"><span class="fa fa-eye fa-2x text-orange"></span></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
