<div class="container" ng-controller="app.views.administracion.historiasViales as vm">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>@L("")Historias en la Vía</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a class="clickable" ng-click="vm.abrirModalNueva(vm.paisId)" title="">@L("")Registrar Nueva Historia <span class="fa fa-plus"></span></a>
        </div>
        <div class="col-md-6 text-right">
            <p>{{vm.historiasViales.length}} @L("")Historias Registradas</p>
        </div>
    </div>
    <div class="row">
        <div class="col-row-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table id="table-ext-3" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">@L("")Nombre</th>
                                <th class="text-center">@L("")Persona</th>
                                <th class="text-center">@L("")Fecha</th>
                                <th class="text-center">@L("")Estado</th>
                                <th class="text-center">@L("")Cambiar Estado</th>
                                <th class="text-center">@L("")Editar</th>
                                <th class="text-center">@L("")Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="historia in vm.historiasViales">
                                <td>
                                    {{historia.nombre}}
                                </td>
                                <td>
                                    {{historia.nombrePersona}}
                                </td>
                                <td class="text-center">
                                    {{historia.fechaPublicacion}}
                                </td>
                                <td class="text-center">
                                    <span ng-show="historia.esActiva">
                                        Activa
                                    </span>
                                    <span ng-show="!historia.esActiva">
                                        Inactiva
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.modificarEstadoHistoria(historia)" title="@L("")Cambiar el estado de la historia"><span class="fa fa-refresh fa-2x text-orange"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEditar(historia.id)" title="@L("")Editar Historia Vial"><span class="fa fa-pencil fa-2x text-orange"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEliminar(historia.id)" title="@L("")Eliminar Historia Vial"><span class="fa fa-trash fa-2x text-orange"></span></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
