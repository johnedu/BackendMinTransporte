<div class="container" ng-controller="app.views.administracion.historiasViales as vm">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>@L("")Historias en la Vía</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a class="clickable" ng-click="vm.abrirModalNueva()" title="">@L("")Registrar Nueva Historia <span class="fa fa-plus"></span></a>
        </div>
        <div class="col-md-6 text-right">
            <p>{{vm.listaHistorias.length}} @L("")Historias</p>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table id="table-ext-3" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">@L("")Nombre</th>
                                <th class="text-center">@L("")Descripcion</th>
                                <th class="text-center">@L("")Estado</th>
                                <th class="text-center">@L("")Editar</th>
                                <th class="text-center">@L("")Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="historia in vm.listaHistorias">
                                <td>
                                    <h4 class="media-heading">
                                        {{historia.nombre}}
                                    </h4>
                                    <div>
                                        <a class="clickable" ng-click="vm.abrirModalPreguntas(historia.id, historia.texto, historia.juego)" title="@L("")Ver los pasos de la historia">
                                            Administrar Pasos <i class="fa fa-question-circle fa-2x"></i>
                                        </a>
                                    </div>

                                </td>
                                <td>
                                    {{pregunta.descripcion}}
                                </td>
                                <td class="text-center">
                                    <span ng-show="historia.esActiva">
                                        @L("")Activa
                                    </span>
                                    <span ng-show="!historia.esActiva">
                                        @L("")Inactiva
                                    </span>&nbsp;&nbsp;
                                    <a class="clickable" ng-click="vm.cambiarEstado(historia)" title="@L("")Cambiar Estado de la Historia"><span class="fa fa-refresh fa-2x"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEditar(historia.id, historia.texto)" title="@L("")Editar la Historia"><span class="fa fa-pencil fa-2x"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEliminar(historia.id)" title="@L("")Eliminar la Historia"><span class="fa fa-trash fa-2x"></span></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
