<div class="container" ng-controller="app.views.administracion.deslizador as vm">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>@L("")Imagenes Slider</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a class="clickable" ng-click="vm.abrirModalNueva(vm.paisId)" title="">@L("")Registrar Nueva Imagen <span class="fa fa-plus"></span></a>
        </div>
        <div class="col-md-6 text-right">
            <p>{{vm.deslizador.length}} @L("")Imagenes Registradas</p>
        </div>
    </div>
    <div class="row">
        <div class="col-row-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table id="table-ext-3" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">@L("")Imagen</th>
                                <th class="text-center">@L("")Descripción</th>                                
                                <th class="text-center">@L("")Editar</th>
                                <th class="text-center">@L("")Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="deslizador in vm.deslizador">
                                <td class="text-center">
                                    <img width="100" src="{{deslizador.urlImagen}}" />
                                </td>
                                <td>
                                    {{deslizador.nombre}}
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEditar(deslizador.id)" title="@L("")Editar Imagen del slider"><span class="fa fa-pencil fa-2x text-orange"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEliminar(deslizador.id)" title="@L("")Eliminar Imagen del slider"><span class="fa fa-trash fa-2x text-orange"></span></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
