<div class="container" ng-controller="app.views.administracion.reporteIncidentes as vm">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>@L("")Reporte de Incidentes</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
        </div>
        <div class="col-md-6 text-right">
            <p>{{vm.listaReportesIncidente.totalFilas}} @L("")Reportes</p>
        </div>
    </div>
    <div class="row">
        <div class="col-row-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table id="table-ext-3" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">@L("")Tipo de Reporte</th>
                                <th class="text-center">@L("")Observaciones</th>
                                <th class="text-center">@L("")Consultar</th>
                                @*<th class="text-center">@L("")Eliminar</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="reporteIncidente in vm.listaReportesIncidente.filasMostrar track by $index">
                                <td>
                                    {{reporteIncidente.tipoReporteIncidente}}
                                </td>
                                <td>
                                    {{reporteIncidente.observaciones | limitTo: 100 }}
                                    <span ng-show="reporteIncidente.observaciones.length > 100"> ...</span>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalConsultar(reporteIncidente.id)" title="@L("")Consultar información del reporte"><span class="fa fa-eye fa-2x text-orange"></span></a>
                                </td>
                                @*<td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEliminar(reporteIncidente.id)" title="@L("")Eliminar el reporte"><span class="fa fa-trash fa-2x text-orange"></span></a>
                                </td>*@
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="text-center">
                    <pagination items-per-page="vm.listaReportesIncidente.filasPorPagina"
                                total-items="vm.listaReportesIncidente.totalFilas"
                                ng-model="vm.listaReportesIncidente.paginaActual"
                                ng-change="vm.listaReportesIncidente.pageChanged()"
                                class="pagination-sm"></pagination>
                </div>
            </div>
        </div>
    </div>
</div>
