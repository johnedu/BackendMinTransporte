<div class="container" ng-controller="app.views.administracion.preguntasJuegos as vm">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>@L("")Preguntas de Juegos</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <a class="clickable" ng-click="vm.abrirModalNueva()" title="">@L("")Registrar Nueva Pregunta <span class="fa fa-plus"></span></a>
        </div>
        <div class="col-md-3 text-center">
            <label class="control-label" for="selectedJuego">@L("")Juego</label>
            <select ng-model="vm.selectedJuego" ng-options="to.id as to.nombre for to in vm.listaJuegos" class="form-control" name="selectedJuego" id="selectedJuego" required ng-change="vm.cargarPreguntas()">
                <option value="">@L("")Seleccione...</option>
            </select>
        </div>
        <div class="col-md-3 text-center">
            <label class="control-label" for="selectedDimension">@L("")Dimesión</label>
            <select ng-model="vm.selectedDimension" ng-options="to.id as to.nombre for to in vm.listaDimensiones" class="form-control" name="selectedDimension" id="selectedDimension" required ng-change="vm.cargarPreguntas()">
                <option value="">@L("")Seleccione...</option>
            </select>
        </div>
        <div class="col-md-3 text-right">
            <p>{{vm.listaPreguntas.length}} @L("")Preguntas</p>
        </div>
    </div>
    <br />
    <div class="row" ng-show="vm.selectedJuego && vm.selectedDimension">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table id="table-ext-3" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">@L("")Texto</th>
                                <th class="text-center">@L("")Pista</th>
                                <th class="text-center">@L("")Nivel</th>
                                <th class="text-center">@L("")Estado</th>
                                <th class="text-center">@L("")Editar</th>
                                <th class="text-center">@L("")Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="pregunta in vm.listaPreguntas">
                                <td>
                                    <h4 class="media-heading">
                                        {{pregunta.texto}}
                                    </h4>
                                    <div>
                                        <a class="clickable" ng-click="vm.abrirModalPreguntas(pregunta.id, pregunta.texto, pregunta.juego)" title="@L("")Ver respuestas de la pregunta">
                                            Administrar Respuestas <i class="fa fa-question-circle fa-2x"></i>
                                        </a>
                                    </div>
                                    
                                </td>
                                <td>
                                    {{pregunta.pista}}
                                </td>
                                <td class="text-center">
                                    {{pregunta.nivel}}
                                </td>
                                <td class="text-center">
                                    <span ng-show="pregunta.estadoActiva">
                                        @L("")Activa
                                    </span>
                                    <span ng-show="!pregunta.estadoActiva">
                                        @L("")Inactiva
                                    </span>&nbsp;&nbsp;
                                    <a class="clickable" ng-click="vm.cambiarEstado(pregunta)" title="@L("")Cambiar Estado de la Pregunta"><span class="fa fa-refresh fa-2x"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEditar(pregunta.id, pregunta.texto)" title="@L("")Editar la pregunta"><span class="fa fa-pencil fa-2x"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEliminar(pregunta.id)" title="@L("")Eliminar la pregunta"><span class="fa fa-trash fa-2x"></span></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
