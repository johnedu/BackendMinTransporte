<div class="container" ng-controller="app.views.administracion.preguntasFrecuentes as vm">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>@L("")Preguntas Frecuentes</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a class="clickable" ng-click="vm.abrirModalNueva(vm.paisId)" title="">@L("")Registrar Nueva Pregunta Frecuente <span class="fa fa-plus"></span></a>
        </div>
        <div class="col-md-6 text-right">
            <p>{{vm.preguntasFrecuentes.length}} @L("")Preguntas Frecuentes</p>
        </div>
    </div>
    <div class="row">
        <div class="col-row-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table id="table-ext-3" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">@L("")Pregunta</th>
                                <th class="text-center">@L("")Respuesta</th>
                                <th class="text-center">@L("")Estado</th>
                                <th class="text-center">@L("")Cambiar Estado</th>
                                <th class="text-center">@L("")Editar</th>
                                <th class="text-center">@L("")Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="pregunta in vm.preguntasFrecuentes">
                                <td>
                                    {{pregunta.pregunta}}
                                </td>
                                <td>
                                    {{pregunta.respuesta}}
                                </td>
                                <td>
                                    <span ng-show="pregunta.esActiva">
                                        Activa
                                    </span>
                                    <span ng-show="!pregunta.esActiva">
                                        Inactiva
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.modificarEstadoPregunta(pregunta)" title="@L("")Cambiar el estado de la pregunta frecuente"><span class="fa fa-refresh fa-2x text-orange"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEditar(pregunta.id)" title="@L("")Editar pregunta frecuente"><span class="fa fa-pencil fa-2x text-orange"></span></a>
                                </td>
                                <td class="text-center">
                                    <a class="clickable" ng-click="vm.abrirModalEliminar(pregunta.id)" title="@L("")Eliminar pregunta frecuente"><span class="fa fa-trash fa-2x text-orange"></span></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
